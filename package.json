{
    "name": "sendra-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "clean": "turbo run clean",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "db:migrate": "pnpm --filter database migrate:dev",
        "db:push": "pnpm --filter database push",
        "db:seed": "pnpm --filter database seed",
        "db:studio": "pnpm --filter database studio",
        "env:up": "docker-compose up -d",
        "env:down": "docker-compose down",
        "env:reset": "docker-compose down -v && docker-compose up -d",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose --env-file .env.docker up -d",
        "docker:up:build": "docker-compose --env-file .env.docker up -d --build",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:clean": "docker-compose down -v --remove-orphans",
        "docker:restart": "docker-compose restart"
    },
    "devDependencies": {
        "prettier": "latest",
        "turbo": "latest",
        "typescript": "latest"
    },
    "packageManager": "pnpm@9.0.0",
    "dependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3",
        "helmet": "^8.1.0",
        "joi": "^18.0.2"
    }
}